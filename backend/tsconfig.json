{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "types": ["node", "express"],
    "lib": ["ES2022"],

    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
